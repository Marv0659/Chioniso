---
const {categoryTxt} = Astro.props;
---

<hr>
<section class="halskæder">
    <div>
      <h1>{categoryTxt}</h1>
      <a href=""><h3>View all <i class="fa-solid fa-arrow-right"></i> </h3></a>
      
      
    </div>
    <div class="halskædeTekst"></div>
  </section>

  


  <style>
    @import url('https://fonts.googleapis.com/css2?family=Eagle+Lake&family=Ubuntu:wght@300&display=swap');
  @font-face {
    font-family: myFirstFont;
    src: url("/Fonts/RoxboroughCF.ttf");
}
    .halskæder{
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
    }

    .halskædeTekst{
      display: grid;
      text-align: center;
    }
    a{
      font-family: 'Eagle Lake', cursive;
  font-family: 'Ubuntu', sans-serif;
      text-decoration: none;
      color: black;
    }

    h1{
      font-family: myFirstFont;
      font-size: 2rem;
    }

    @media screen and (max-width: 750px) {
  .halskæder{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    
    
  }
  }
  </style>


<script src="https://kit.fontawesome.com/f1ba43c5c7.js" crossorigin="anonymous"></script>